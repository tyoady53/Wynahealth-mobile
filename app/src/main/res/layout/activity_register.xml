<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medical_cross"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_email"
                            android:textSize="@dimen/MoreTextSize"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Email"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                            <requestFocus/>
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        app:passwordToggleEnabled="true"
                        app:passwordToggleDrawable="@drawable/custom_password_eye"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_password"
                            android:textSize="@dimen/MoreTextSize"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:hint="Password"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        app:passwordToggleEnabled="true"
                        app:passwordToggleDrawable="@drawable/custom_password_eye"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_password_rep"
                            android:textSize="@dimen/MoreTextSize"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:hint="Repeat Password"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:alpha="0.7"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"/>
                        <Spinner
                            android:id="@+id/regis_title"
                            android:textSize="@dimen/MoreTextSize"
                            android:maxLines="1"
                            android:hint="Title"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </Spinner>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_nama"
                            android:textSize="@dimen/MoreTextSize"
                            android:inputType="text"
                            android:maxLines="1"
                            android:hint="Nama Lengkap"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Kelamin"/>
                        <Spinner
                            android:id="@+id/regis_jeniskelamin"
                            android:textSize="@dimen/MoreTextSize"
                            android:maxLines="1"
                            android:hint="Jenis Kelamin"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </Spinner>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_noktp"
                            android:textSize="@dimen/MoreTextSize"
                            android:inputType="number"
                            android:ems="16"
                            android:maxLines="1"
                            android:hint="No. KTP"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kota"/>
                        <Spinner
                            android:id="@+id/regis_kota"
                            android:textSize="@dimen/MoreTextSize"
                            android:maxLines="1"
                            android:hint="Kota"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </Spinner>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_postal"
                            android:textSize="@dimen/MoreTextSize"
                            android:inputType="number"
                            android:maxLines="1"
                            android:hint="Kode Pos"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_nohp"
                            android:textSize="@dimen/MoreTextSize"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:minEms="10"
                            android:hint="No. HP"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/regis_umur"
                            android:textSize="@dimen/MoreTextSize"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Tanggal Lahir"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/regis_sk_chckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:onClick="syaratketentuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saya menyetujui Syarat dan Ketentuan yang Berlaku"/>
            </LinearLayout>
            <Button
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="captcha"
                android:id="@+id/btn_captcha"/>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/card_chck"
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/lazzy_green">
                <CheckBox
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chckbox"
                    android:background="@color/white"/>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I'm not a robot"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/register_request"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:padding="20dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="register"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
