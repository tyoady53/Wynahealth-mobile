<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promptUbahpassword"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"/>
        <Spinner
            android:id="@+id/prompt_title"
            android:textSize="@dimen/MoreTextSize"
            android:maxLines="1"
            android:hint="Title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </Spinner>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/prompt_nama"
            android:textSize="@dimen/MoreTextSize"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Nama Lengkap"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <requestFocus/>
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/prompt_email"
            android:textSize="@dimen/MoreTextSize"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="Email"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"/>
        <Spinner
            android:id="@+id/prompt_jeniskelamin"
            android:textSize="@dimen/MoreTextSize"
            android:maxLines="1"
            android:hint="Jenis Kelamin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </Spinner>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/prompt_noktp"
            android:textSize="@dimen/MoreTextSize"
            android:inputType="number"
            android:ems="16"
            android:maxLines="1"
            android:hint="No. KTP"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota"/>
        <Spinner
            android:id="@+id/prompt_kota"
            android:textSize="@dimen/MoreTextSize"
            android:maxLines="1"
            android:hint="Kota"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </Spinner>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/prompt_postal"
            android:textSize="@dimen/MoreTextSize"
            android:inputType="number"
            android:maxLines="1"
            android:hint="Kode Pos"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/prompt_nohp"
            android:textSize="@dimen/MoreTextSize"
            android:inputType="phone"
            android:maxLines="1"
            android:minEms="10"
            android:hint="No. HP"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/prompt_umur"
            android:textSize="@dimen/MoreTextSize"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Tanggal Lahir"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
