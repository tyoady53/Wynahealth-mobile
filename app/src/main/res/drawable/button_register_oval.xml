<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape  android:shape="rectangle" >
            <corners
                android:radius="27dp"
                />
            <gradient
                android:angle="60"
                android:centerX="35%"
                android:startColor="#408bff"
                android:endColor="#79EBFD"
                android:type="linear"
                />
            <size
                android:width="150dp"
                android:height="40dp"
                />
        </shape>
    </item>
    <item
        android:height="30dp"
        android:width="30dp"
        android:gravity="center_vertical"
        android:drawable="@drawable/vector_register_icon" />
</layer-list>
